<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@mipmap/title_bar_bg">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_selector"
            android:layout_centerVertical="true"
            android:padding="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cost_detail"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户编号"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:drawableLeft="@mipmap/user_number"
                    android:drawablePadding="20dp"/>
                <TextView
                    android:id="@+id/user_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名称"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:drawableLeft="@mipmap/user_name"
                    android:drawablePadding="20dp"/>
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本月起度"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:drawableLeft="@mipmap/month_begin"
                    android:drawablePadding="20dp"/>
                <TextView
                    android:id="@+id/start_degree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本月止度"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:drawableLeft="@mipmap/month_end"
                    android:drawablePadding="20dp"/>
                <TextView
                    android:id="@+id/end_degree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="综合用量"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:drawableLeft="@mipmap/water_type"
                    android:drawablePadding="20dp"/>
                <TextView
                    android:id="@+id/total_dosage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性       质"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:drawableLeft="@mipmap/water_type"
                    android:drawablePadding="20dp"/>
                <TextView
                    android:id="@+id/water_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="综合单价"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:drawableLeft="@mipmap/synthesize_price"
                    android:drawablePadding="20dp"/>
                <TextView
                    android:id="@+id/danwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="元/吨"
                    android:layout_marginLeft="3dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/unit_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_toLeftOf="@id/danwei"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="减免额度"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:drawableLeft="@mipmap/derate_limit"
                    android:drawablePadding="20dp"/>
                <TextView
                    android:id="@+id/derate_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="综合费用"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:drawableLeft="@mipmap/synthesize_water"
                    android:drawablePadding="20dp"/>
                <TextView
                    android:id="@+id/integrated_water"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="抄表时间"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:drawableLeft="@mipmap/read_meter_time"
                    android:drawablePadding="20dp"/>
                <TextView
                    android:id="@+id/meter_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收费时间"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:drawableLeft="@mipmap/charge_time"
                    android:drawablePadding="20dp"/>
                <TextView
                    android:id="@+id/charge_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务电话"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:drawableLeft="@mipmap/service_phone"
                    android:drawablePadding="20dp"/>
                <TextView
                    android:id="@+id/service_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="023-12345678"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
