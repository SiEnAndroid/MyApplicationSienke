<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/background1"
    tools:context=".meter_code.sk.ui.securityeast.SyEastLoginActivity">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:layout_gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="W,12:25"
        app:layout_constraintBottom_toTopOf="@+id/edit_mobile_user"
        android:src="@mipmap/title" />
    <EditText
        android:id="@+id/edit_mobile_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxLines="1"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:maxLength="15"
        android:padding="5dp"
        android:drawableLeft="@mipmap/user_1"
        android:drawablePadding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="h,16:2"
        app:layout_constraintBottom_toTopOf="@+id/edit_mobile_psw"
        app:layout_constraintTop_toBottomOf="@+id/image_logo"
        android:background="@drawable/mobile_security_edittview" />
    <EditText
        android:id="@+id/edit_mobile_psw"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:maxLength="30"
        android:drawableLeft="@mipmap/lock"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="h,16:2"
        app:layout_constraintTop_toBottomOf="@+id/edit_mobile_user"
        app:layout_constraintBottom_toTopOf="@+id/remind_me"
        android:background="@drawable/mobile_security_edittview" />

    <CheckBox
        android:id="@+id/remind_me"
        android:button="@null"
        android:drawableLeft="@drawable/check_box_selector1"
        android:drawableStart="@drawable/check_box_selector1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:layout_marginTop="5dp"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:text="记住我"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/edit_mobile_psw"
        app:layout_constraintLeft_toLeftOf="@+id/edit_mobile_psw"

       />
    <TextView
        android:id="@+id/ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/computer_white"
        android:drawableStart="@mipmap/computer_white"
        android:drawablePadding="10dp"
        android:paddingTop="15dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:text="设置"
        android:textColor="@drawable/mobile_text_selector"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/edit_mobile_psw"
        app:layout_constraintRight_toRightOf="@+id/edit_mobile_psw"/>


    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:background="@drawable/mobile_logon_selector"
        android:text="取消"
        android:textColor="@drawable/mobile_text_selector"
        android:layout_marginTop="45dp"
        app:layout_constraintLeft_toLeftOf="@+id/remind_me"
        app:layout_constraintTop_toBottomOf="@+id/remind_me"
        android:textSize="20sp" />

    <Button
        android:id="@+id/logon_btn"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/mobile_logon_selector"
        android:text="登录"
        android:textColor="@drawable/mobile_text_selector"
        app:layout_constraintTop_toBottomOf="@+id/ip"
        app:layout_constraintRight_toRightOf="@+id/ip"
        android:textSize="20sp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@mipmap/background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>