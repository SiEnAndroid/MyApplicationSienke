<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@mipmap/window_bg"
        android:orientation="vertical"
        android:paddingTop="4dp">

        <RadioGroup
            android:id="@+id/rg_aeration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_aeration"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/meter_settings_first_one_selector"
                android:button="@null"
                android:drawableLeft="@mipmap/ic_round_blue"
                android:drawableStart="@mipmap/ic_round_blue"
                android:gravity="center"
                android:checked="true"
                android:padding="8dp"
                android:text="通气安检"
                android:textColor="@drawable/select_black_color"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_thin" />

            <RadioButton
                android:id="@+id/rb_aerate_below"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/more_settings_last_one_selector"
                android:button="@null"
                android:drawableLeft="@mipmap/ic_round_blue"
                android:drawableStart="@mipmap/ic_round_blue"
                android:gravity="center"
                android:padding="8dp"
                android:text="不  合  格"
                android:textColor="@drawable/select_black_color"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_thin" />



        </RadioGroup>
    </LinearLayout>
</LinearLayout>
