<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/background1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/mobile_security_user"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/user_1" />

            <EditText
                android:id="@+id/edit_mobile_user"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLines="1"
                android:maxLength="15"
                android:background="@drawable/mobile_security_edittview" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/mobile_security_user"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/lock" />

            <EditText
                android:id="@+id/edit_mobile_psw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLines="1"
                android:maxLength="30"
                android:inputType="textPassword"
                android:background="@drawable/mobile_security_user" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:padding="5dp">
                <CheckBox
                    android:id="@+id/remind_me"
                    android:background="@drawable/check_box_selector1"
                    android:button="@null"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记住我"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/computer_white"
                android:drawableStart="@mipmap/computer_white"
                android:drawablePadding="10dp"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:text="设置"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:textColor="@drawable/mobile_text_selector"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="21dp">

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/mobile_logon_selector"
                android:gravity="center"
                android:text="取消"
                android:textColor="@drawable/mobile_text_selector"
                android:textSize="20sp" />

            <Button
                android:id="@+id/logon_btn"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/mobile_logon_selector"
                android:gravity="center"
                android:text="登录"
                android:textColor="@drawable/mobile_text_selector"
                android:textSize="20sp" />

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@mipmap/background" />

</RelativeLayout>