<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 中间部分 -->
    <LinearLayout
        android:id="@+id/gps_page_show_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/usertable_cellbg2x"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/gps_page_show"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#e0ffff"
            android:gravity="center"
            android:padding="2dp"
            android:text="1/8" />

        <EditText
            android:id="@+id/gps_page_search"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:layout_weight="3"
            android:background="@drawable/edit_bg_selector"
            android:hint="@string/gps_search_hint"
            android:paddingLeft="2dp"

            android:textSize="15sp" />
    </LinearLayout>

    <com.example.administrator.thinker_soft.myfirstpro.refreshListView.RefreshPullToRefreshListView
        android:id="@+id/gps_meter_fragment_lv"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:cacheColorHint="#00000000"
        android:choiceMode="singleChoice"
        android:descendantFocusability="beforeDescendants"
        android:divider="#00000000"
        android:dividerHeight="4dp"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:transcriptMode="disabled">

    </com.example.administrator.thinker_soft.myfirstpro.refreshListView.RefreshPullToRefreshListView>
</LinearLayout>
