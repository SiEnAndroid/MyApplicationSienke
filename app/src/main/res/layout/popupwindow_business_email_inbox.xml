<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_thin">

        <RadioButton
            android:id="@+id/huifu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/security_popupwindow"
            android:button="@null"
            android:drawableLeft="@mipmap/huifu"
            android:gravity="center"
            android:padding="15dp"
            android:text="回复"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_font_color_white" />

        <RadioButton
            android:id="@+id/zhuanfa"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/security_popupwindow"
            android:button="@null"
            android:drawableLeft="@mipmap/zhuanfa"
            android:gravity="center"
            android:padding="15dp"
            android:text="转发"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_font_color_white" />

        <RadioButton
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/security_popupwindow"
            android:button="@null"
            android:drawableLeft="@mipmap/shanchu"
            android:gravity="center"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:text="删除"
            android:textColor="@color/text_black"
            android:textSize="16sp" />
    </RadioGroup>

</LinearLayout>