<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center">
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/business_check_shape">
        <TextView
            android:id="@+id/tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择"
            android:textColor="@color/text_black"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/gray_thin"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:id="@+id/container_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/single_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="单个抄表本"
                android:background="@drawable/meter_settings_layout_selector"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/text_black"
                android:padding="10dp"/>

            <View
                android:layout_width="match_parent"
                android:background="@color/gray_thin"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/all_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="所有抄表本"
                android:gravity="center"
                android:background="@drawable/meter_settings_layout_selector"
                android:textSize="14sp"
                android:textColor="@color/text_black"
                android:padding="10dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/gray_little_thin"
            android:layout_height="0.5dp"/>

        <TextView
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:button="@null"
            android:background="@drawable/popupwindow_no_task"
            android:gravity="center"
            android:text="返回"
            android:textSize="16sp"
            android:textColor="@color/text_blue"/>
    </LinearLayout>

</LinearLayout>


